{
  "name": "advinst-tool-installer",
  "description": "Advanced Installer Tool Installer",
  "version": "1.0.0",
  "main": "AdvinstToolInstaller.js",
  "scripts": {
    "initdev" : "npm install",
    "compile": "tsc -project AdvinstTool",
    "clean": "rimraf dist",
    "link": "mkdirp dist/AdvinstTool/node_modules && pushd \"dist/AdvinstTool\" && npm install vsts-task-lib@2.0.5 && npm install vsts-task-tool-lib@0.4.0 && popd",
    "postlink:": "rimraf dist/_temp",
    "content:task": "copyfiles \"./AdvinstTool/!(*.ts)\"./AdvinstTool/task.json\"  dist",
    "content:extension": "copyfiles vss-extension.json *.md license.txt *.png dist",
    "content:all": "npm run content:task && npm run content:extension",
    "build" : "npm run compile && npm run content:all && npm run link",
    "package": "tfx extension create --root dist --output-path dist --manifest-globs vss-extension.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/caphyon/advinst-tool-installer.git"
  },
  "keywords": [
    "VSTS",
    "task"
  ],
  "author": "Caphyon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/caphyon/advinst-tool-installer/issues"
  },
  "homepage": "https://github.com/caphyon/advinst-tool-installer#readme",
  "dependencies": {
    "vsts-task-lib": "^2.0.5",
    "vsts-task-tool-lib": "^0.4.0"
  },
  "devDependencies": {
    "@types/node": "^8.0.19",
    "copyfiles": "^1.2.0",
    "mkdirp": "^0.5.1",
    "rimraf": "2.6.1",
    "tfx-cli": "^0.4.9",
    "typescript": "^2.4.2"
  }
}