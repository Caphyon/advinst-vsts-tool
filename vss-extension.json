{
  "id": "AdvancedInstallerTool",
  "publisher": "Caphyon",
  "name": "Advanced Installer Tool Installer",
  "version": "2.0.0",
  "description": "Acquires a specific version of Advanced Installer from internet or the tools cache and adds it to the PATH.",
  "tags": [
    "build",
    "release",
    "download",
    "setup",
    "advanced installer",
    "tool installer"
  ],
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "categories": [
    "Azure Pipelines"
  ],
  "branding": {
    "color": "rgb(239, 237, 233)",
    "theme": "light"
  },
  "content": {
    "details": {
      "path": "README.md"
    },
    "license": {
      "path": "LICENSE.txt"
    },
    "changelog": {
      "path": "CHANGELOG.md"
    }
  },
  "files": [
    {
      "path": "dist/v1",
      "packagePath": "tool/v1"
    },
    {
      "path": "dist/v2",
      "packagePath": "tool/v2"
    },
    {
      "path": "images",
      "addressable": true
    },
    {
      "path": "README.md",
      "addressable": true
    },
    {
      "path": "LICENSE.txt",
      "addressable": true
    },
    {
      "path": "CHANGELOG.md",
      "addressable": true
    }
  ],
  "icons": {
    "default": "images/advinst-logo.png"
  },
  "links": {
    "home": {
      "uri": "https://www.advancedinstaller.com"
    },
    "learn": {
      "uri": "http://www.advancedinstaller.com/features.html"
    },
    "repository": {
      "uri": "https://github.com/caphyon/advinst-vsts-tool"
    },
    "issues": {
      "uri": "https://github.com/caphyon/advinst-vsts-tool/issues"
    },
    "support": {
      "uri": "http://www.advancedinstaller.com/support.html"
    }
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/caphyon/advinst-vsts-tool"
  },
  "galleryProperties": [
    {
      "markdownItParser": true
    }
  ],
  "contributions": [
    {
      "id": "Caphyon.AdvancedInstaller.Tool",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "tool"
      }
    }
  ]
}